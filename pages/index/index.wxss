.usermotto {
    margin-top: 200px;
}


.home-swiper {
    height: 440rpx;
}

.home-swiper image {
    width: 750rpx;
    height: 440rpx;
}

.news {
    padding: 20rpx 20rpx 20rpx;
    margin-top: 20rpx;
    background-color: #fff;
}

.news-tit {
    font-size: 28rpx;
    border-bottom: 2rpx solid #ddd;
    padding-bottom: 10rpx;
}

.news-list {
    padding-top: 10rpx;
}

