.news-item {
    position: relative;
    padding-bottom: 10rpx;
    overflow: hidden;
    border-bottom: 1rpx solid #ddd;
}

.news-item .thumb {
    width: 200rpx;
    height: 150rpx;
    float: left;
}

.news-item .title {
    font-size: 26rpx;
    margin-left: 220rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    height: 80rpx;
}

.news-item .date {
    font-size: 24rpx;
    color: #ccc;
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
}

.news-more {
    font-size: 24rpx;
    text-align: center;
    border: 2rpx solid #ddd;
    border-radius: 5rpx;
    margin-top: 10rpx;
    padding: 10rpx 0;
}

.intro {
    background-color: #fff;
}

.intro-tit {
    background-color: #fff;
    font-size: 28rpx;
    padding: 10rpx 0;
    margin: 0 20rpx;
    margin-top: 20rpx;
    border-bottom: 2rpx solid #ddd;
}

.intro-list {
    background-color: #fff;
    padding: 20rpx 0 20rpx;
}

.intro-list .item {
    display: inline-block;
    width: 33%;
    text-align: center;
    font-size: 24rpx;
}

.intro-list text {
    display: block;
    font-size: 24rpx;
}

.agreement {
    position: relative;
    line-height: 1;
    margin-top: 20rpx;
    padding: 20rpx 40rpx 20rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
    background-color: #fff;
}

.agreement text {
    color: #007d40;
}

.agreement navigator {
    display: inline;
}

.stations {
    padding: 30rpx 20rpx;
    overflow: hidden;
    background-color: #fff;
}

.stations-item {
    width: 50%;
    float: left;
    position: relative;
}

.stations-item .thumb {
    width: 356rpx;
    height: 250rpx;
    display: block;
    margin-right: 5rpx;
}

.stations-item:nth-child(even) .thumb {
    margin-left: 5rpx;
    width: 356rpx;
    margin-right: 0;
}

.stations-item text {
    background: rgba(0, 125, 64, 0.8);
    position: absolute;
    left: 0;
    width: 356rpx;
    text-align: center;
    bottom: 0;
    height: 50rpx;
    color: #fff;
    font-size: 24rpx;
    height: 48rpx;
    line-height: 48rpx;
}

.stations-item:nth-child(even) text {
    left: 5rpx;
}

.txt-company {
    font-size: 12px;
    color: #333;

}
