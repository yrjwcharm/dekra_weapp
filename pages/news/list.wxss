.intro{width:750rpx; height:268rpx; background:url(http://dk.zemakeji.com/Data/miniapp/newsbg.jpg); color:#fff; line-height:268rpx; text-align: center;}
.intro text{background-color:rgba(26,110,60,.8); padding:20rpx; font-size:28rpx;}

.news{padding:20rpx 20rpx 20rpx; margin-top:20rpx; background-color:#fff;}
