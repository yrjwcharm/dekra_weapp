.news-list{padding-top:10rpx;}
.news-list view{padding:10rpx 160rpx 10rpx 0;font-size:24rpx; overflow: hidden; text-overflow:ellipsis;white-space: nowrap; position: relative;}
.news-list text{position:absolute; right:0; top:10rpx;}
.news-more{font-size:24rpx; text-align: center; border:2rpx solid #007d40; border-radius:5rpx; margin-top:10rpx;}